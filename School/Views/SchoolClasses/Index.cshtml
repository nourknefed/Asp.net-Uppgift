@model IEnumerable<School.Models.SchoolClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Teacher.DisplayName)
            </td>
          
            <td>
                @if (item.StudentsSchool != null)
                {
                    @foreach (var student in item.StudentsSchool)
                    {
                        @Html.DisplayFor(modelItem => student.Student.DisplayName)

                    }
                }

                @*@Html.DisplayFor(modelItem => item.StudentsSchool)*@

            </td>

            <td>
                @*@Html.DisplayFor(modelItem => item.Year)*@
                @string.Format("{0:yyyy/MM/dd}", item.Year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
